html
  min-height 100%
  text-rendering optimizeLegibility

body
  min-height 100%
  background blue url('../images/cb-white.png') center center no-repeat
  font  16px "Times New Roman", Times, serif



::selection
  background-color rgba(0,0,0,1)
  color #fff
  opacity 1
  outline 3px solid blue

::-moz-selection 
  background-color #000
  color #fff
  outline 3px solid blue



p
  margin 0 0 1em

a, a:hover, a:active, a:visited
  color inherit
  text-decoration none
  cursor pointer
  &:hover
    color red



h1, .h1
  font 13px/16px arial, sans-serif
  letter-spacing 3px

h2, .h2
  font 36px/40px "Times News Roman", Times, serif
  letter-spacing 3px

h3, .h3
  font 16px/20px "Times New Roman", Times, serif
  letter-spacing 2px

h4, .h4

h5, .h5

h6, .h6


  


#content
  margin 0 auto
  border 5px solid blue
  overflow auto

.layer
  width 100%
  left 0px
  padding 0px 40px
  position absolute
  background-color blue
  box-sizing border-box
  min-height 1000px
  box-shadow 0px 0px 24px 5px rgba(0, 0, 0, .3)
  .title
    text-align center
    margin 0
    padding 20px
    margin-bottom 60px
    cursor pointer
  .close
    position absolute
    top 14px
    left 14px
    color red
    font-size 24px
    font-weight bold

.channelView 
  overflow auto

.menu 
  .block 
    height auto
    width auto
    padding 0px 20px
    float none
    text-transform capitalize
    &.Image
      padding-bottom 20px
      display none

.block.Text
  float none
  width 440px

.block
  cursor pointer
  padding 20px
  float left
  display table
  box-sizing border-box
  margin 5px
  color black
  height 200px
  max-width 600px;
  .wrapper
    display table-cell
    vertical-align middle
    pointer-events none
  .description
    max-width 500px
    margin-top 7px

#overlay
  background-color rgba(255, 0, 0, .93)
  color white
  position fixed
  overflow auto
  top 0
  left 0
  width 100%
  height 100%
  display none
  z-index 100
  .block
    color white
    margin 0 auto
    float none
    text-align center
    .title
      width 100%
      margin-bottom 30px
      text-align center
      p
        display inline-block
        border-bottom 1px solid white
        padding-bottom 2px
    img, .description
      display inline-block
      text-align left
      margin 15px
      vertical-align top
    img            
      background-color white
    .description
      max-width 500px
 
  .close
    position absolute
    top 15px
    left 15px
    color white
    font-size 60px
    z-index 1
    line-height 30px
    display block
    font-weight bold

