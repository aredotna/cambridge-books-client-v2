a, a:visited
  color #F95A5A
  text-decoration none

a:hover
  color #665248

#home-view
  width 600px
  height 200px
  margin 20px auto

  #content
    background #FFF
    padding 20px
    -webkit-border-radius 4px
    -moz-border-radius 4px
    border-radius 4px



html
  min-height 100%

body
  min-height 100%
  background: blue url('../images/cb-white.png') center center no-repeat;
  font  16px "Times New Roman", Times, serif

p
  margin 0 0 1.5em

a:focus, a:hover
  
a
  color #F95A5A
  text-decoration none
  cursor pointer

#content
  margin 0 auto
  border 5px solid blue
  overflow auto

.layer
  width: 100%;
  left: 0px;
  position absolute
  background-color: blue;
  box-sizing: border-box
  padding: 20px 40px
  min-height 1000px
  box-shadow 0px 0px 24px 5px rgba(0, 0, 0, .3)
  .title
    text-align center
    margin 0
    margin-bottom 50px
    font-family arial
    letter-spacing 3px
    font-size 13px
  .close
    position absolute
    top 13px
    left 10px
    color red
    font-size 24px
    font-weight bold

.channelView 
  overflow auto

.menu .block 
  font-size 36px
  height auto
  width auto
  padding 3px 20px
  float none
  text-transform capitalize

.menu .block.Image
  padding-bottom 20px

.block.Text
  letter-spacing: 1px;
  text-align: left;
  float: none;
  width: 440px;

.block
  cursor pointer
  padding 20px
  float left
  display table
  text-align: center;
  box-sizing border-box
  margin 5px
  color black
  letter-spacing 3px
  height 200px
  text-transform small-caps
  .wrapper
    display table-cell
    vertical-align middle
    pointer-events none

