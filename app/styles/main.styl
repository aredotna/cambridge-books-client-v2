html
  min-height 100%

body
  min-height 100%
  font-size 15px
  color #666
  background: blue url('../images/cb-white.png') center center no-repeat;
  font-family "KievitPro", "ff-kievit-web-pro-1","ff-kievit-web-pro-2", "Helvetica Neue", Arial, Helvetica, sans-serif

h1,h2,h3,h3,h4
  font-weight normal
  color #222
  clear left

h1
  font-size 5em
  line-height 1.4
  margin-bottom 0.5em
h2
  font-size 2em
  line-height 1
  margin-bottom 0.5em

p
  margin 0 0 1.5em

a:focus, a:hover
  
a
  color #F95A5A
  text-decoration none
  cursor pointer

ul, ol
  list-style-type none

#content
  margin 0 auto
  border 5px solid blue
  overflow auto

h1
  background #91A2C0
  background-image url('http://brunchwithcoffee.com/static/img/brunch.png')
  background-repeat no-repeat
  background-position 2px
  color #fff
  width 330px
  padding-left 138px
  -webkit-border-radius 5px
  -moz-border-radius 5px
  border-radius 5px

#props
  position relative
  top 36px
  font-size 18px
  padding-left 373px
  color #eee
  font-style italic

.layer
  width: 100%;
  left: 0px;
  position absolute
  background-color: blue;
  box-sizing: border-box;
  padding-top: 20px
  min-height 1000px
  .close
    position absolute
    top 10px
    left 10px

.channelView 
  overflow auto

.block
  cursor pointer
  background-color white
  width 25%
  padding 20px
  float left
  text-align center
  display table
  box-sizing border-box
  margin 5px
  color red
  letter-spacing 3px
  height: 150px
  width: 150px
  .wrapper
    display table-cell
    vertical-align middle
    pointer-events none

