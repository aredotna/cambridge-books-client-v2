html
  height 100%
  text-rendering optimizeLegibility

body
  height 100%
  position relative
  font  16px "Times New Roman", Times, serif
  text-rendering optimizeLegibility
  background-color #150C2E
  min-width 1220px


::selection
  background-color rgba(0,0,0,1)
  color #fff
  opacity 1
  outline 3px solid blue

::-moz-selection 
  background-color #000
  color #fff
  outline 3px solid blue


p
  margin 0 0 12px

em
  font-style italic

a, a:hover, a:active, a:visited
  color inherit
  text-decoration none
  cursor pointer
  position relative
  &:hover
    margin-top: 1px

li
  list-style none

h1, .h1
  font-family arial
  font-size: 14px;
  line-height: 20px;
  letter-spacing: 1px;


h3, .h3
  font 16px/20px "Times New Roman", Times, serif
  letter-spacing 1px
  word-spacing -1px


h4, .h4
  font 10px/12px arial, sans-serif
  letter-spacing 1px

h5, .h5

h6, .h6

.channelLink::after 
  content " "

.close
  position absolute
  top 14px
  left 14px
  color red
  font-size 24px
  font-weight bold

.sourceLink
  display block
  clear both
  border-bottom 1px solid black
  float left

#topArrow
  position: fixed;
  bottom: 16px;
  left: 12px;
  font-size: 16px;
  z-index 9999
  color red
  display none

#mainWrapper 
  position relative
  overflow hidden
  min-height 100%

#content
  margin 0 auto
  overflow auto

#mainNav 
  color white
  text-align center
  padding 20px
  li
    display inline-block
    margin 0px 10px
    cursor pointer

#infoLink
  width 18px
  height 18px
  background url('../images/home-icon.png')
  position absolute
  top 20px
  left 13px


.Image .sourceLink
  display none

#base
  .sourceLink
    display none
  color white
  h3, .h3, h2, .h2
    font-family arial
  h3, .h3, h2, .h2
    font-size 14px
    line-height 20px
    letter-spacing 1px
  ::selection
    background-color rgba(255,255,255,1)
    color black
    opacity 1
  #baseInner
    box-sizing content-box
    padding-bottom 100px
    margin 48px auto 0 auto
  .block
    -webkit-transition .25s
    width 360px
    .connections
      display none
      margin-bottom 0px
    .connectionLink
      display block
    &.Channel
      padding 5px 0px
      margin-bottom 10px
      border: 1px solid white
      .titleWrapper
        display none
      a
        padding 3px 10px
    &.Image, &.Link
      margin-bottom 36px
      text-align center
      img
        max-width 100%
      .title
        font 12px/13px arial
        letter-spacing 1px
        border-bottom none
        -webkit-transform none
        text-align: left
        margin-bottom 0px

  .blockCont
    float left
    margin 0px 36px
    img
      max-width 720px
      margin-top 10px
      margin-bottom 5px
    .info 
      width auto
    .titleWrapper
      text-align left
      font-family arial
      border-bottom 1px solid white
      margin-bottom 12px
      padding-bottom 2px

    .description
      padding-bottom 24px
      a
        padding-bottom 0px
        margin-bottom 0px
        border-bottom 1px solid white
      ul
        li
          margin-bottom 10px
          padding-left 17px
          left -17px
          position relative
        li:before
           content "â€¢"
           font-size 24px
           position: absolute
           left 0px
           top: 0px


$bottomBlue = #1f00d1
$gradientColor = black
footer
  position absolute 
  bottom 0px
  left 0px
  width 100%
  color white
  margin-top 100px
  font-family arial
  height: 73px
  padding-top: 44px
  font-size: 15px
  background: #150C2E; /* Old browsers */
  background: -moz-linear-gradient(top, #150C2E 0%, $gradientColor 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#150C2E), color-stop(100%, $gradientColor)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, #150C2E 0%,$gradientColor 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, #150C2E 0%,$gradientColor 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, #150C2E 0%,$gradientColor 100%); /* IE10+ */
  background: linear-gradient(to bottom, #150C2E 0%,$gradientColor 100%); /* W3C */
  text-align right
  padding-right 20px
  img
    height 13px
    width auto


.layer
  width 100%
  left 0px
  padding 0px 60px
  position absolute
  background-color blue
  box-sizing border-box
  min-height 1000px
  box-shadow 0px 0px 24px 5px rgba(0, 0, 0, .3)
  .title.topLink
    text-align center
    margin 0
    padding 20px
    margin-bottom 60px
    cursor pointer

  .viewLink
    position fixed
    bottom 20px
    right 20px
    padding 10px
    background-color blue
    box-shadow 2px 2px 5px rgba(0, 0, 0, .2)
    color white
    font-family arial
    font-size 14px
    letter-spacing 2px
    text-transform capitalize
    &:hover
      color white
      background-color red

.channelView 
  overflow auto
  padding-bottom 200px

.block
  &.Channel
    cursor pointer
  .connectionLink
    display block

.menu
  .block 
    height auto
    width auto
    float none
    &.Channel
      cursor pointer
      padding 0px
    &.Image, &.Link
      padding-bottom 0px
      .title
        margin-top: 10px
        display block
      .info
        margin-top 10px
    .title
      display none
    .connections
      display none
    .viewLink
      background-color #ccc
      &:active
        background-color #ccc
        cursor default



.channelCont:not(.artists-projects) .channelView:not(.menu),
.channelCont:not(.classroom) .channelView:not(.menu),
  width 1100px
  margin 0 auto
  hr
    display none
  .blockCont
    padding-bottom 5px
    overflow auto
    a:hover
      border-bottom-color blue
      color blue
    &::after
      display block
      clear both
      padding 175px 0px
      color black
      content ""
      font-size 24px
      text-align center
    &:last-child::after
      display none
      content ''
    &.logo
      margin-top 125px
      margin-bottom 200px
      &::after
        display none
      .block
        width 500px
        margin 0 auto
        text-align center
        &.Image, &.Link
          img
            box-shadow none
          .content 
            text-align center
            margin-bottom 32px
          .info
            text-align center
        .title
          display none
          float none
          border 0


  .block
    &.Text
      float none
      width 440px
    &.Image, &.Link
      .content
        text-align right
    img
      box-shadow 4px 4px 12px rgba(0, 0, 0, .3)
    .titleWrapper
      float left
      clear both
      word-spacing 0px
      margin-bottom 16px
    .title
      border-bottom 1px solid black
      padding-bottom 1px
      display inline
    .description
      clear both
    .content, .info
      float left
      width  500px
    .content
      margin-right 100px
      img
        max-width 100%
    .connections
      margin-top 32px

    .connectionLink
      font-style:italic


.single, .artists-projects .list, .classroom, .locations
  a:hover
    color blue
  .block
    float none
    width 600px
    margin-bottom 50px
    padding-bottom 50px
    .description
      width 500px
    margin-bottom 50px
    &.Image, &.Link
      width 100%
      .info
        margin-top 10px
    .connectionLink
      display block

